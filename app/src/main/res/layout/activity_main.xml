<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#050505"
    tools:context=".MainActivity">

<TextView
    android:id="@+id/dispay"
    android:layout_width="match_parent"
    android:layout_height="175dp"
    android:background="#050505"
    android:text="0.0"
    android:textColor="#FFFFFF"
    android:textSize="120sp"
    android:gravity="bottom|right">
</TextView>

<TableRow
    android:weightSum="2"
    android:layout_weight="2"
    android:layout_height="0dp" >
    <Button
        style="@style/botones"
        android:background="#072559"
        />
    <Button
        style="@style/botones"
        android:background="#072559"
        android:text="AC"
        android:layout_marginLeft="1.5dp"/>
</TableRow>

<TableRow android:weightSum="4" android:layout_marginTop="1.5dp"
    android:layout_weight="2"
    android:layout_height="0dp">
    <Button
        style="@style/botones"
        android:background="#2461ca"
        android:text="("
        />
    <Button
        style="@style/botones"
        android:background="#2461ca"
        android:text=")"
        android:layout_marginLeft="1.5dp"
        />
    <Button
        style="@style/botones"
        android:background="#2461ca"
        android:text="%"
        android:layout_marginLeft="1.5dp"
        />
    <Button
        style="@style/botones"
        android:background="#072559"
        android:text="/"
        android:layout_marginLeft="1.5dp"
        />
</TableRow>
    <TableRow android:layout_marginTop="1.5dp"
        android:weightSum="4"
        android:layout_weight="2"
        android:layout_height="0dp">
        <Button
            android:id="@+id/BTN7"
            style="@style/botones"
            android:background="#2461ca"
            android:text="7"
            />
        <Button
            android:id="@+id/BTN8"
            style="@style/botones"
            android:background="#2461ca"
            android:text="8"
            android:layout_marginLeft="1.5dp"
            />
        <Button
            android:id="@+id/BTN9"
            style="@style/botones"
            android:background="#2461ca"
            android:text="9"
            android:layout_marginLeft="1.5dp"
            />
        <Button
            style="@style/botones"
            android:background="#072559"
            android:text="X"
            android:layout_marginLeft="1.5dp"
            />
    </TableRow>

    <TableRow android:layout_marginTop="1.5dp"
        android:weightSum="4"
        android:layout_weight="2"
        android:layout_height="0dp">
        <Button
            android:id="@+id/BTN4"
            style="@style/botones"
            android:background="#2461ca"
            android:text="4"
            />
        <Button
            android:id="@+id/BTN5"
            style="@style/botones"
            android:background="#2461ca"
            android:text="5"
            android:layout_marginLeft="1.5dp"
            />
        <Button
            android:id="@+id/BTN6"
            style="@style/botones"
            android:background="#2461ca"
            android:text="6"
            android:layout_marginLeft="1.5dp"
            />
        <Button
            style="@style/botones"
            android:background="#072559"
            android:text="+"
            android:layout_marginLeft="1.5dp"
            />
    </TableRow>
    <TableRow android:layout_marginTop="1.5dp"
        android:weightSum="4"
        android:layout_weight="2"
        android:layout_height="0dp">
        <Button
            android:id="@+id/BTN1"
            style="@style/botones"
            android:background="#2461ca"
            android:text="1"
            />
        <Button
            android:id="@+id/BTN2"
            style="@style/botones"
            android:background="#2461ca"
            android:text="2"
            android:layout_marginLeft="1.5dp"
            />
        <Button
            android:id="@+id/BTN3"
            style="@style/botones"
            android:background="#2461ca"
            android:text="3"
            android:layout_marginLeft="1.5dp"
            />
        <Button
            style="@style/botones"
            android:background="#072559"
            android:text="-"
            android:layout_marginLeft="1.5dp"
            />
    </TableRow>
    <TableRow android:layout_marginTop="1.5dp"
        android:weightSum="4"
        android:layout_weight="2"
        android:layout_height="0dp">
        <Button
            android:id="@+id/BTN0"
            style="@style/botones"
            android:background="#2461ca"
            android:text="0"
            />
        <Button
            style="@style/botones"
            android:background="#2461ca"
            android:text="."
            android:layout_marginLeft="1.5dp"
            />
        <Button
            style="@style/botones"
            android:layout_weight="2"
            android:background="#072559"
            android:text="="
            android:layout_marginLeft="1.5dp"
            />

    </TableRow>
</TableLayout>